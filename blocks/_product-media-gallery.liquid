<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Attempt to get the media gallery element using the ID set by block.shopify_attributes
    // This assumes block.shopify_attributes sets an ID like "block-{{block.id}}"
    const mediaGallery = document.getElementById('block-{{ block.id }}');

    if (!mediaGallery) {
      console.error('Media gallery element with ID "block-{{ block.id }}" not found for flavor filtering.');
      return;
    }

    const productForm = mediaGallery.closest('form[action^="/cart/add"], form.product-form');
    
    function getSelectedFlavorValue() {
      if (!productForm) return null;
      let flavorValue = null;
      const optionInputs = productForm.querySelectorAll('select, input[type="radio"]');

      for (const input of optionInputs) {
        let inputNameAttribute = input.getAttribute('name');
        let inputName = inputNameAttribute ? inputNameAttribute.toLowerCase() : '';
        let labelText = '';
        if (input.id) {
          const label = productForm.querySelector(`label[for="${input.id}"]`);
          if (label) {
            labelText = label.textContent.trim().toLowerCase();
          }
        }
        
        const dataOptionName = input.dataset.optionName ? input.dataset.optionName.toLowerCase() : '';

        if (inputName.includes('[flavor]') || labelText === 'flavor' || dataOptionName === 'flavor') {
          if (input.tagName === 'SELECT') {
            flavorValue = input.value;
            break; 
          } else if (input.type === 'radio') {
            if (input.checked) {
              flavorValue = input.value;
              break;
            }
          }
        }
      }
      return flavorValue;
    }

    function formatFlavorForSearch(flavor) {
      if (!flavor || typeof flavor !== 'string') return '';
      return flavor.replace(/\s+/g, '-').toLowerCase();
    }

    function updateMediaVisibility() {
      const selectedFlavor = getSelectedFlavorValue();
      const searchTerm = formatFlavorForSearch(selectedFlavor);

      const itemsToFilter = [
        ...mediaGallery.querySelectorAll('.slideshow-slide'),
        ...mediaGallery.querySelectorAll('.media-gallery__grid > li'),
      ];
      
      const zoomDialog = mediaGallery.querySelector('zoom-dialog');
      if (zoomDialog) {
        itemsToFilter.push(...zoomDialog.querySelectorAll('.dialog-thumbnails-list__thumbnail'));
        itemsToFilter.push(...zoomDialog.querySelectorAll('.dialog-zoomed-gallery > li'));
      }
      
      let visibleMediaCount = 0;
      itemsToFilter.forEach(item => {
        const mediaAlt = item.dataset.mediaAlt || ''; 

        if (!searchTerm || mediaAlt.includes(searchTerm)) {
          item.classList.remove('media-item-hidden');
          visibleMediaCount++;
        } else {
          item.classList.add('media-item-hidden');
        }
      });
      
      // Optional: Trigger update for slideshows or other components that depend on visible items
      // This is highly theme/component specific.
      // e.g., if using Flickity: Flickity.data(mediaGallery.querySelector('.flickity-enabled'))?.resize();
      // e.g., if slideshow component has an update method:
      // const slideshowComponent = mediaGallery.querySelector('slideshow-component'); // Or appropriate selector
      // if (slideshowComponent && typeof slideshowComponent.update === 'function') {
      //   slideshowComponent.update();
      // }
    }

    if (productForm) {
      productForm.addEventListener('change', (event) => {
        // Filter for option selectors to avoid reacting to other form changes.
        if (event.target.matches('select[name*="options["], input[type="radio"][name*="options["]')) {
          setTimeout(updateMediaVisibility, 50); // Delay to allow other scripts to process
        }
      });
      // Listen for Shopify's common variant change event (emitted by some themes/JS)
      productForm.addEventListener('variant:change', () => {
         setTimeout(updateMediaVisibility, 50);
      });
    } else {
      console.warn('Product form not found relative to media gallery. Flavor filtering on variant change may not work.');
    }

    setTimeout(updateMediaVisibility, 100); // Initial filter application
  });
</script>

